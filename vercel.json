{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/favicon.png", "dest": "/public/favicon.png" },
    { "src": "/og-image.png", "dest": "/public/og-image.png" },
    { "src": "/ber.png", "dest": "/public/ber.png" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
